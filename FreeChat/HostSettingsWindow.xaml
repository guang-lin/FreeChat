<Window x:Class="FreeChat.HostSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FreeChat"
        mc:Ignorable="d"
        Title="设置服务器" Height="200" Width="300" WindowStyle="ToolWindow">
    <Grid>
        <Label Content="服务器IP地址" HorizontalAlignment="Left" Margin="27.298,33.288,0,0" VerticalAlignment="Top"/>
        <Label Content="端口号" HorizontalAlignment="Left" Margin="60.3,72.305,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ipTextBox" HorizontalAlignment="Left" Height="23" Margin="110.687,35.346,0,0" Padding="2,3,2,2" TextWrapping="Wrap" VerticalAlignment="Top" Width="148.325" Style="{DynamicResource TextBoxStyle1}" FontSize="14"/>
        <TextBox x:Name="portTextBox" HorizontalAlignment="Left" Height="23" Margin="111.68,73.009,0,0" Padding="2,3,2,2" TextWrapping="Wrap" VerticalAlignment="Top" Width="67.332" Style="{DynamicResource TextBoxStyle1}" FontSize="14"/>
        <Button x:Name="okButton" Content="确定" HorizontalAlignment="Left" Margin="108,119.332,0,0" VerticalAlignment="Top" Width="75" Height="30.668" Style="{DynamicResource ButtonStyle1}" Click="OkButton_Click"/>
    </Grid>
</Window>
